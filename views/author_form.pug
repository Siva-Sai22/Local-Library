extends layout

block content
  div(class='container mx-auto p-4')
    h1(class='my-4 text-center text-3xl font-bold text-gray-800')= title

    form(method='POST' class='max-w-md mx-auto p-4 bg-white shadow-md rounded-lg')
      div(class='mb-4')
        label(for='first_name' class='block text-gray-700 text-sm font-bold mb-2') First Name:
        input#first_name.form-input(type='text' placeholder='First name (Christian)' name='first_name' required value=(undefined===author ? '' : author.first_name) class='w-full px-3 py-2 leading-tight focus:outline-none focus:shadow-outline border border-gray-300 rounded appearance-none')
        label(for='family_name' class='block text-gray-700 text-sm font-bold mt-2 mb-2') Family Name:
        input#family_name.form-input(type='text' placeholder='Family name (Surname)' name='family_name' required value=(undefined===author ? '' : author.family_name) class='w-full px-3 py-2 leading-tight focus:outline-none focus:shadow-outline border border-gray-300 rounded appearance-none')
      div(class='mb-4')
        label(for='date_of_birth' class='block text-gray-700 text-sm font-bold mb-2') Date of birth:
        input#date_of_birth.form-input(type='date' name='date_of_birth' value=(undefined===author ? '' : author.date_of_birth_yyyy_mm_dd) class='w-full px-3 py-2 leading-tight focus:outline-none focus:shadow-outline border border-gray-300 rounded appearance-none')
        label(for='date_of_death' class='block text-gray-700 text-sm font-bold mt-2 mb-2') Date of death:
        input#date_of_death.form-input(type='date' name='date_of_death' value=(undefined===author ? '' : author.date_of_death_yyyy_mm_dd) class='w-full px-3 py-2 leading-tight focus:outline-none focus:shadow-outline border border-gray-300 rounded appearance-none')
      button(type='submit' class='w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline')
        | Submit

    if errors
      ul(class='list-disc text-red-500 mt-4')
        each error in errors
          li!= error.msg