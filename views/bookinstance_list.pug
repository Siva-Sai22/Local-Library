extends layout

block content
  h1(class='my-4 text-center text-2xl font-bold')= title

  if bookinstance_list.length
    ul
      each val in bookinstance_list
        li
          a(href=val.url class="text-blue-500 hover:underline") #{val.book.title} : #{val.imprint} -&nbsp;
          if val.status=='Available'
            span(class="text-green-600") #{val.status}
          else if val.status=='Maintenance'
            span(class='text-orange-400') #{val.status}
          else
            span(class='text-red-600') #{val.status}
          if val.status!='Available'
            span  (Due: #{val.due_back_formatted} )

  else
    p There are no book copies in this library.