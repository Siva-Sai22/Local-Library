extends layout

block content
  h1(class='my-4 text-center text-2xl font-bold') Author: #{author.name}
  p(class='mb-4') #{author.lifespan}

  div(style='margin-left:20px;margin-top:20px')

    h4(class='text-lg font-semibold mb-2') Books
    if author_books.length
      dl
        each book in author_books
          dt(class='mb-2')
            a(href=book.url class='text-blue-500 hover:underline') #{book.title}
          dd(class='mb-4') #{book.summary}
    else
      p(class='mb-4') This author has no books.
  hr(class='my-4')
  p(class='mb-4')
    a(href=author.url+'/delete' class='bg-red-500 text-white p-2 rounded-md') Delete Author
  p(class='mb-2')
    a(href=author.url+'/update' class='bg-blue-500 text-white p-2 rounded-md') Update Author