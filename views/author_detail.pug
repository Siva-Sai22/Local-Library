extends layout

block content
  div(class='container mx-auto p-4')
    h1(class='my-4 text-center text-3xl font-bold text-gray-800') Author: #{author.name}
    p(class='mb-4 text-center text-gray-600') #{author.lifespan}

    div(class='mt-8')
      h4(class='text-lg font-semibold mb-2') Books
      if author_books.length
        dl(class='mb-8')
          each book in author_books
            dt(class='mb-2')
              a(href=book.url class='text-blue-500 hover:underline') #{book.title}
            dd(class='mb-4 text-gray-700') #{book.summary}
      else
        p(class='mb-4 text-gray-700') This author has no books.

    hr(class='my-8')

    div(class='flex justify-center items-center')
      a(href=author.url+'/delete' class='bg-red-500 text-white py-2 px-4 rounded-md text-center mr-4 hover:bg-red-700 focus:outline-none focus:shadow-outline') Delete Author
      a(href=author.url+'/update' class='bg-blue-500 text-white py-2 px-4 rounded-md text-center hover:bg-blue-700 focus:outline-none focus:shadow-outline') Update Author