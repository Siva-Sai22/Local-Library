extends layout

block content
  div(class='container mx-auto p-4')
    h1(class='my-4 text-center text-3xl font-bold text-gray-800')= title

    if author_list.length
      ul(class='mt-4')
        each author in author_list
          li(class='mb-4 bg-white rounded-lg p-4 shadow-md')
            a(href=author.url class='text-blue-500 hover:underline') #{author.name}
            span(class='text-gray-600') | (#{author.lifespan})
    else
      p(class='mt-4 text-gray-600') There are no authors.