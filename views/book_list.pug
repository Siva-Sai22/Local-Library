extends layout

block content
  h1(class='my-4 text-center text-2xl font-bold')= title
  if book_list.length
    ul
      each book in book_list
        li
          a(href=book.url class="text-blue-500 hover:underline") #{book.title}
          |  (#{book.author.name})

  else
    p There are no books.