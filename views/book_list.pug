extends layout

block content
  div(class='container mx-auto p-4')
    h1(class='my-4 text-center text-3xl font-bold text-gray-800') #{title}

    if book_list.length
      ul(class='mt-4')
        each book in book_list
          li(class='mb-2')
            a(href=book.url class="text-blue-500 hover:underline") #{book.title}
            span(class='text-gray-600 ml-1') (#{book.author.name})

    else
      p(class='mt-4 text-lg text-gray-600') There are no books.