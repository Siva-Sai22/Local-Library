doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    div(class='container-fluid')
      div(class='row flex gap-4')
        div(class='h-dvh bg-blue-500 p-4 text-lg text-white w-[280px] shrink-0')
          block sidebar
            ul
              li
                a(href='/catalog' class="block w-full rounded-md p-2 hover:bg-blue-800") Home
              li
                a(href='/catalog/books' class="block w-full rounded-md p-2 hover:bg-blue-800") All books
              li
                a(href='/catalog/authors' class="block w-full rounded-md p-2 hover:bg-blue-800") All authors
              li
                a(href='/catalog/genres' class="block w-full rounded-md p-2 hover:bg-blue-800") All genres
              li
                a(href='/catalog/bookinstances' class="block w-full rounded-md p-2 hover:bg-blue-800") All book-instances
              li
                hr
              li
                a(href='/catalog/author/create' class="block w-full rounded-md p-2 hover:bg-blue-800") Create new author
              li
                a(href='/catalog/genre/create' class="block w-full rounded-md p-2 hover:bg-blue-800") Create new genre
              li
                a(href='/catalog/book/create' class="block w-full rounded-md p-2 hover:bg-blue-800") Create new book
              li
                a(href='/catalog/bookinstance/create' class="block w-full rounded-md p-2 hover:bg-blue-800") Create new bookinstance

        div(class='w-full')
          block content
