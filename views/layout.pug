doctype html
html(lang='en')
  head
    title= title
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css')
    link(rel='stylesheet' href='/stylesheets/style.css')
  body(class='bg-gray-100 font-sans leading-normal tracking-normal')
    div(class='container mx-auto p-4')
      div(class='flex flex-wrap -mx-4')
        div(class='h-screen bg-blue-500 p-4 text-lg text-white w-[280px] shrink-0')
          block sidebar
            ul
              li
                a(href='/catalog' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') Home
              li
                a(href='/catalog/books' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') All books
              li
                a(href='/catalog/authors' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') All authors
              li
                a(href='/catalog/genres' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') All genres
              li
                a(href='/catalog/bookinstances' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') All book-instances
              li
                hr(class='my-2 border-t border-blue-700')
              li
                a(href='/catalog/author/create' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') Create new author
              li
                a(href='/catalog/genre/create' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') Create new genre
              li
                a(href='/catalog/book/create' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') Create new book
              li
                a(href='/catalog/bookinstance/create' class='block w-full rounded-md p-2 hover:bg-blue-700 transition-colors') Create new bookinstance

        div(class='flex-1 p-4 bg-white shadow-md rounded-lg')
          block content
